<% if @not_saved %>
  <p>DID NOT SAVE! Try again.</p>
<% end %>

<form method="POST" action="/questions/<%= @question.id %>/answers">
  <h3>Edit Answer:</h3>
  <input type="hidden" name="_method" value="put">
  <p><textarea name="answer[body]" placeholder="question"><%= @answer.body %></textarea></p>
  <input type="submit">
</form>
